{
  "name": "server",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "start": "ts-node src/index.ts",
    "dev": "ts-node src/index.ts",
    "build": "npx nx build --skip-nx-cache @monorepo/database && yarn build-ts",
    "build-ts": "tsc",
    "build:prod": "cd ../.. && nx run server:build --configuration=production",
    "serve": "node dist/index.js",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "type:check": "tsc --noEmit",
    "format:code": "prettier . --write",
    "check:code": "npx prettier . --check && yarn lint && tsc"
  },
  "dependencies": {
    "@monorepo/database": "*",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "express": "^4.19.2",
    "express-rate-limit": "^7.5.0",
    "helmet": "^7.1.0",
    "http-errors": "^2.0.0",
    "imagekit": "^5.0.1",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "stripe": "^17.5.0",
    "theauthapi": "^1.0.1-2.1",
    "typescript-eslint": "^7.17.0",
    "uuid": "^11.0.5"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.5",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/crypto-js": "^4.2.2",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.18.1",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.14.10",
    "@typescript-eslint/eslint-plugin": "^7.17.0",
    "@typescript-eslint/parser": "^7.17.0",
    "dotenv": "^16.4.5",
    "eslint": "^9.6.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-unicorn": "^55.0.0",
    "prettier": "^3.3.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.5.3"
  }
}
